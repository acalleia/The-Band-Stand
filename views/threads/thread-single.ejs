<% include ../partials/boilerplate %>
<% include ../partials/nav %>
<div class='posts-container'>
  <% for (let i= 0; i < posts.length; i++) { %>
  <div class='forum-view'>
    <p><%= posts[i].post %></p>
     <form method='POST' action='/threads/<%= threadId %>/posts/<%= posts[i].id %>?_method=DELETE'>
            <input type='submit' value='Delete it!' />
          </form>
    <a class='linkto' href='/threads/<%= threadId %>/posts/<%= posts[i].id %>/edit'>Edit</a>
  </div>
  <% } %>
</div>

<div class='post-view'>
    <a class='linkto' href='/threads/<%= threadId %>/posts/new'>Create New Post!</a>
</div>

<div class='forum-container'>
    <form method='POST' action='/threads/<%= threadId %>?_method=DELETE'>
      <input type='submit' value='Delete it!' />
    </form>
</div>

<% include ../partials/end %>
